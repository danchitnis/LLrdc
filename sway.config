# Minimal Sway Config for Headless Remote Desktop

# Input configuration to avoid xkbcomp warnings
input * {
    xkb_layout "us"
    xkb_model "pc105"
}

# Output configuration
output HEADLESS-1 resolution 1280x720

# Idle configuration (disable)
exec swayidle -w \
    timeout 300 'swaymsg "output * dpms off"' \
    resume 'swaymsg "output * dpms on"' \
    before-sleep 'swaymsg "output * dpms off"'

# Key bindings (minimal)
bindsym Mod4+Return exec weston-terminal
bindsym Mod4+Shift+q kill
bindsym Mod4+d exec dmenu_run

# IPC
ipc-socket $XDG_RUNTIME_DIR/sway-ipc.sock
