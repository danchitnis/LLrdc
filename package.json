{
  "name": "llrdc",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "LLrdc: Low Latency remote desktop",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danchitnis/llrdc.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint src/",
    "start": "docker run --rm -p ${PORT:-8080}:${PORT:-8080} -e PORT=${PORT:-8080} -e DISPLAY_NUM=${DISPLAY_NUM:-99} dchitnis/llrdc",
    "test": "playwright test"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.58.2",
    "@types/dom-webcodecs": "^0.1.18",
    "@types/node": "^25.3.0",
    "eslint": "^10.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.1"
  }
}
